    CMclAutoLock( CMclMutex & rCMclMutex);
    CMclAutoLock( CRITICAL_SECTION * pCritSec);
    CMclAutoLock( CMclCritSec & rCMclCritSec);

    // destructor...
    ~CMclAutoLock(void);
};

